<div class='nested-fields'>
  <div class='form-group'>
    <%= form.hidden_field :_destroy %>
    <div class="field">
    <%= form.text_field :quantity, size: '4', placeholder: 'qty' %> 
    <%= form.text_field :unit, size: '10',  placeholder: 'unit' %> 
    <%= form.text_field :item_name, size: '25', placeholder: 'item' %> <!-- find or create item -->
    <%= form.text_field :notes, size: '50', placeholder: 'notes' %>
    
    <small>
      <%= link_to "Delete", "#", data: { action: "click->nested-form#remove_association" } %>
    </small>
    </div>
  </div>
</div>
