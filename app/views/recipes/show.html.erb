<div class="recipe-header">
<h2><%= @recipe.name %></h2>
<span><%= link_to "+ edit recipe", edit_recipe_path(@recipe) if @recipe.author == current_user %></span>
<span><%= link_to "+ add to meal plan", new_recipe_planned_meal_path(@recipe) %></span>
</div>
<div>
    <p><i>Submitted by: <%= @recipe.author.username %></i></p>
</div>
<div>
 <p><%= @recipe.description %></div></p>
<div>
<p>
Prep Time: <%= @recipe.prep_time %>
<br>
Cook Time: <%= @recipe.cook_time %>
<br>
Total Time: <%= @recipe.total_time %>
<br>
Serving Size: <%= @recipe.serving_size %>
<% if @recipe.calories %>
<br>
Calories: <%= @recipe.calories %>
<% end %>
</p>
</div>

<h4>Ingredients:</h4>
<ul>
<% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient.quantity %> <%= ingredient.unit %> <%= ingredient.item_name %> <%= ingredient.notes%></li>
  <% end %>
</ul>

<h4>Instuctions:</h4>
<ol>
<% @recipe.instructions.each do |instruction| %>
    <li><%= instruction.step %></li>
  <% end %>
</ol>

