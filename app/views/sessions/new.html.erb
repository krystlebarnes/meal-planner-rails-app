<div class="center">

<h2>Log In</h2>

<div class="error">
<p><%= flash[:error] %></p>
</div>

<%= form_for :user do |f| %>
  <div class="field">
  <%= f.label :username %>
  <%= f.text_field :username %>
  </div>
  <div class="field">
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>
  <div class="actions">
  <%= f.submit "Log in" %>
  </div>
<% end %>

</div>
